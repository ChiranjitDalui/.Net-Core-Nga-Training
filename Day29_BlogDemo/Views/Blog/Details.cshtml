@model Day29_BlogDemo.Models.BlogPost

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-4 p-4">
        <!-- Blog Title -->
        <h1 class="fw-bold text-primary mb-3">@Model.Title</h1>

        <!-- Meta Info -->
        <p class="text-muted small mb-4">
            <i class="bi bi-calendar3 me-2"></i>
            Published on <span class="fw-semibold">@Model.CreatedAt.ToString("MMMM dd, yyyy")</span>
        </p>

        <!-- Blog Content -->
        <div class="fs-5 lh-lg text-dark mb-4">
            @Html.Raw(Model.Content)
        </div>

        <!-- Back to Blog Button -->
        <a asp-controller="Blog" asp-action="Index" class="btn btn-outline-secondary rounded-pill">
            ‚Üê Back to Blog
        </a>
    </div>
</div>

<!-- Optional Styling -->
<style>
    .card h1 {
        font-size: 2.2rem;
        line-height: 1.3;
    }
    .card .fs-5 {
        text-align: justify;
    }
    .card:hover {
        transition: 0.3s;
        transform: translateY(-3px);
    }
</style>

