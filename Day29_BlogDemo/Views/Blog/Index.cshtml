@model IEnumerable<Day29_BlogDemo.Models.BlogPost>

<h1 class="mb-4 text-center text-primary fw-bold">✨ Blog Posts ✨</h1>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var post in Model)
    {
        <div class="col">
            <div class="card shadow-sm border-0 rounded-3 h-100 hover-shadow">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-dark fw-bold">
                        <a asp-controller="Blog" asp-action="Details" asp-route-slug="@post.Slug" 
                           class="text-decoration-none text-dark">
                            @post.Title
                        </a>
                    </h5>
                    
                    <div class="mt-auto">
                        <a asp-controller="Blog" asp-action="Details" asp-route-slug="@post.Slug"
                           class="btn btn-outline-primary btn-sm rounded-pill">
                            Read More →
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-4px);
        box-shadow: 0 6px 15px rgba(0,0,0,0.15);
        transition: all 0.3s ease-in-out;
    }
</style>

