@model IEnumerable<Day29_BlogDemo.Models.Product>

<div class="container my-5">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary">Products</h1>
        <a asp-controller="Product" asp-action="Create" class="btn btn-success rounded-pill shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> Create New Product
        </a>
    </div>

    <!-- Product List -->
    <ul class="list-group shadow-sm">
        @if (Model != null && Model.Any())
        {
            @foreach (var product in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" 
                       class="text-decoration-none fw-semibold text-dark">
                        <i class="bi bi-box-seam me-2 text-secondary"></i> @product.Name
                    </a>
                    <span class="badge bg-primary rounded-pill">View</span>
                </li>
            }
        }
        else
        {
            <li class="list-group-item text-muted text-center">
                <i class="bi bi-exclamation-circle me-2"></i> No products available.
            </li>
        }
    </ul>
</div>

<!-- Optional Styling -->
<style>
    .list-group-item:hover {
        background-color: #f8f9fa;
        transition: 0.2s;
    }
</style>
